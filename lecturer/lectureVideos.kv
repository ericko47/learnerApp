#:import Factory kivy.factory.Factory
<RoundedButton@Button>
    background_color:( 0, 0, 0, 0)
    background_normal:""
    canvas.before:
        Color:
            rgba:(0.85, 0.85, 0.85, 1)
        RoundedRectangle:
            size:self.size
            pos:self.pos
            radius:[5]

<Mypopup>
    auto_dismiss: False
    title:"Create a video lecture"
    size_hint: 0.9, 0.4
    #pos_hint: {"x":0.2, "top":0.3}
    BoxLayout:
        orientation:"vertical"
        size: root.width, root.height
        padding:10
        margin:10

        Label:
            text:"Enter the Topic of the lecture video"
            font_size:"18"
        TextInput:
            id:vid_name
            size_hint_y:None
            height:55
            focus:True
            write_tab:False
            padding:10
        Label:
            text:""
        BoxLayout:
            BoxLayout:
                padding:5
                RoundedButton:
                    text:'cancel'
                    color:(0.404, 0.227, 0.718, 1)
                    font_size:18
                    height:30
                    background_normal:""
                    on_release:root.dismiss()
            BoxLayout:
                padding:5
                RoundedButton:
                    text:'enter'
                    color:(0.404, 0.227, 0.718, 1)
                    font_size:18
                    height:30
                    background_normal:""
                    on_release:root.getVidname()

<mylayout>
    BoxLayout:
        orientation:'vertical'
        size_hint_x:1
        size:root.width, root.height
        #spacing: 10
        padding:10
        canvas.before:
            Color:
                rgba:(0.85, 0.85, 0.85, 1)
            Rectangle:
                size:self.size
                pos:self.pos

        BoxLayout:
            size_hint_x:1
            size_hint_y:None
            height:50
            width:self.width
            spacing:10
            canvas.before:
                Color:
                    rgba:(0.404, 0.227, 0.718, 1)
                Rectangle:
                    size:self.size
                    pos:self.pos
            Label:
                text:"Lecture Recording"
                size_hint_x: 1
                font_size:24
                color:(1,1,1, 1)
                bold:True

        BoxLayout:
            #orientation:"vertical"
            padding:10
            spacing:10
            #margin:10
            radius:[40]
            BoxLayout:
                id:s
            BoxLayout:
                background_color:( 0, 0, 0, 0)
                background_normal:""
                size_hint:None,None
                width:100
                height:100
                padding:10
                canvas:
                    Color:
                        rgba:(1, 1, 1, 1)
                    Ellipse:
                        size:self.size
                        pos:self.pos
                        source:("../imgs/lec_profiles/user.png")
                        angle_start:0
                        angle_end:360
            BoxLayout:
                id:s
        BoxLayout:
            size_hint_y:None
            height:60
            orientation:"vertical"

        BoxLayout:
            orientation:"vertical"
            padding:10
            spacing:10
            margin:10
            radius:[40]
            canvas.before:
                Color:
                    rgba:(0.95, 0.95, 0.95, 1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
            Label:
                id:err
                text:''
                height:20
                color:(1,0,0, 1)
                font_size:14
                size_hint_y:None
                height:30
            TextInput:
                id:gr
                hint_text:"Group e.g (BICTGROUP017) for 2017 group"
                color:(0,0,0, 1)
                multiline:False
                font_size:16
                size_hint_y:None
                height:30
                focus:True
                write_tab:False
                on_text_validate:
                    #root.validateCourse()
                    lec_time.focus=True
            TextInput:
                id:lec_time
                hint_text:"Time for the class e.g (dd-mm-YYYY 15:43)"
                color:(0,0,0, 1)
                multiline:False
                font_size:16
                size_hint_y:None
                height:30
                #on_focus: root.validateCourse()
                on_text_validate:
                    unit.focus = True
                    root.checkInputs()
                write_tab:False
            TextInput:
                id:unit
                hint_text:"Which unit? e.g(Bict224 or Comp101)"
                color:(0,0,0, 1)
                multiline:False
                font_size:16
                size_hint_y:None
                height:30
                write_tab:False
                on_text_validate: root.checkInputs()

        BoxLayout:
            size_hint_y:None
            height:80
            BoxLayout:
                size_hint_y:None
                height:60
                width:root.width
                margin:5
                RoundedButton:
                    text:"Record"
                    text_size: self.size
                    color:(0.404, 0.227, 0.718, 1)
                    halign: 'right'
                    padding_x:10
                    valign: 'center'
                    font_size:"20"
                    on_release:
                        root.checkInputs()
                        Factory.Mypopup().open()
                        root.ids.close.disabled = False
                        root.ids.stt.disabled = False
                    Image:
                        source:'../imgs/startrec.png'
                        y:self.parent.y - 20
                        x:self.parent.x - 30
            BoxLayout:
                size_hint_y:None
                height:60
                width:root.width
                margin: 5
                RoundedButton:
                    id:stt
                    text:"Start"
                    font_size:"20"
                    color:(0.404, 0.227, 0.718, 1)
                    disabled: True
                    text_size: self.size
                    halign: 'right'
                    padding_x:20
                    valign: 'center'
                    on_release:root.camStart()
                    Image:
                        source:'../imgs/sttcam.png'
                        y:self.parent.y - 20
                        x:self.parent.x - 20
            BoxLayout:
                size_hint_y:None
                height:60
                width:root.width
                margin:5
                RoundedButton:
                    id:close
                    text:"Stop"
                    font_size:"20"
                    color:(0.404, 0.227, 0.718, 1)
                    disabled: True
                    text_size: self.size
                    halign: 'right'
                    padding_x:20
                    valign: 'center'
                    on_release: root.stopScreen()
                    Image:
                        source:'../imgs/stoprec.png'
                        y:self.parent.y - 20
                        x:self.parent.x - 20
        BoxLayout:
            size_hint_y:None
            height:80
            BoxLayout:
                size_hint_y:None
                height:60
                width:root.width
                margin:5
                RoundedButton:
                    id:live
                    text:"Browse"
                    font_size:"20"
                    color:(0.404, 0.227, 0.718, 1)
                    text_size: self.size
                    halign: 'right'
                    padding_x:10
                    valign: 'center'
                    on_release:root.fileChooser()
                    Image:
                        source:'../imgs/browse.png'
                        y:self.parent.y - 20
                        x:self.parent.x - 30

            BoxLayout:
                size_hint_y:None
                height:60
                width:root.width
                #padding:10
                RoundedButton:
                    id:con
                    text:"Connect"
                    font_size:"20"
                    color:(0.404, 0.227, 0.718, 1)
                    text_size: self.size
                    halign: 'right'
                    #padding_x:20
                    valign: 'center'
                    on_release:root.connection()
                    Image:
                        source:'../imgs/connect.png'
                        y:self.parent.y - 20
                        x:self.parent.x - 20
            BoxLayout:
                size_hint_y:None
                height:60
                disabled: False
                width:root.width
                #padding:10
                RoundedButton:
                    id:sd_btn
                    text:"Live"
                    font_size:"20"
                    color:(0.404, 0.227, 0.718, 1)
                    text_size: self.size
                    halign: 'right'
                    #disabled: True
                    padding_x:20
                    valign: 'center'
                    on_release:root.liveClass()
                    Image:
                        source:'../imgs/s.png'
                        y:self.parent.y - 20
                        x:self.parent.x - 20

        BoxLayout:
            id:e
            size_hint_y:None
            height:50
            Label:
                id:rep
                text:''
                height:20
                color:(0,1,0, 1)
                font_size:14
                size_hint_y:None
                height:30
