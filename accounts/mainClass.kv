<FlatButton@ButtonBehavior+Label>
    font_size:24
    color:(0, 0, 0, 1)
    bold: True

<CustLabel@Label>:
    color: 0, 0, 0, 1
    bold:False


<studentForm>:
    orientation: "vertical"
    spacing : 10
    canvas.before:
        Color:
            rgba:(230/255, 247/255, 1, 1)
        Rectangle:
            size:self.size
            pos:self.pos

    BoxLayout:
        size_hint_y:None
        height: 60
        canvas.before:
            Color:
                rgba:(204/255, 239/255, 1, 1)
            Rectangle:
                size:self.size
                pos:self.pos
        Label:
            text: "STUDENT REGISTRATION"
            bold: True
            text_hint_x: .9
            color:(0,0,0,1)
            font_size:35

        Image:
            source: '../icons/png/account-logout-2x.png'
            size_hint_x: .1
    BoxLayout:
        orientation:'horizontal'
        spacing:10
        padding:10


        BoxLayout:
            orientation: 'vertical'
            size:self.size
            size_hint_y:1
            height:self.height
            BoxLayout:
                spacing:10
                padding: 10
                size:self.size
                pos:self.pos
                size_hint_y: .6
                Label:
                    text:"First Name"
                    size_hint_x:.35
                    color:(0,0,0, 1)
                TextInput:
                    id:sfn
                    text_hint:"Student\'s first name"
                    font_size:14
                    color:(0,0,0, 1)
                    multiline:False
                    focus:True
                    on_text_validate:ssn.focus=True
            BoxLayout:
                spacing:10
                padding: 10
                size:self.size
                pos:self.pos
                size_hint_y:.6
                Label:
                    text:"Second Name"
                    size_hint_x:.35
                    color:(0,0,0, 1)
                TextInput:
                    id:ssn
                    text_hint:"Student\'s second name"
                    font_size:14
                    color:(0,0,0, 1)
                    multiline:False
                    focus:True
                    on_text_validate:sn.focus=True
            BoxLayout:
                spacing:10
                padding: 10
                size:self.size
                pos:self.pos
                size_hint_y:.6
                Label:
                    text:"Surname"
                    size_hint_x:.35
                    color:(0,0,0, 1)
                TextInput:
                    id:sn
                    text_hint:"Student\'s sir name"
                    font_size:14
                    color:(0,0,0, 1)
                    multiline:False
                    focus:True
                    on_text_validate:pn.focus=True
            BoxLayout:
                spacing:10
                padding: 10
                size:self.size
                pos:self.pos
                size_hint_y:.6
                Label:
                    text:"Parent\'s/Guardian\'s Name"
                    size_hint_x:.78
                    color:(0,0,0, 1)
                TextInput:
                    id:pn
                    text_hint:"Parent\'s/Guardian\'s full name"
                    font_size:14
                    color:(0,0,0, 1)
                    multiline:False
                    focus:True
                    on_text_validate:spn.focus=True
            BoxLayout:
                spacing:10
                padding: 10
                size:self.size
                pos:self.pos
                size_hint_y:.6
                Label:
                    text:"Student's Phone Number"
                    size_hint_x:.78
                    color:(0,0,0, 1)
                TextInput:
                    id:spn
                    text_hint:"Phone number"
                    font_size:14
                    color:(0,0,0, 1)
                    multiline:False
                    focus:True
                    on_text_validate:pp.focus=True
            BoxLayout:
                spacing:10
                padding: 10
                size:self.size
                pos:self.pos
                size_hint_y:.6
                Label:
                    text:"Parent's/Guardian's Phone"
                    size_hint_x:.78
                    color:(0,0,0, 1)
                TextInput:
                    id:pp
                    text_hint:"Phone"
                    font_size:14
                    color:(0,0,0, 1)
                    multiline:False
                    focus:True
                    on_text_validate:sni.focus=True
            BoxLayout:
                spacing:10
                padding: 10
                size:self.size
                pos:self.pos
                size_hint_y: .6
                Label:
                    text:"Student National ID"
                    size_hint_x:.35
                    color:(0,0,0, 1)
                TextInput:
                    id:sni
                    text_hint:"student\'s national identification card"
                    size_hint_x:.65
                    font_size:12
                    color:(0,0,0, 1)
                    multiline:False
                    focus:True
                    on_text_validate:pni.focus=True

        BoxLayout:
            orientation: 'vertical'
            size:self.size
            size_hint_y:1
            height:self.height

            BoxLayout:
                spacing:10
                padding: 10
                size:self.size
                pos:self.pos
                size_hint_y: .6
                Label:
                    text:"Parent\'s National ID"
                    size_hint_x:.35
                    color:(0,0,0, 1)
                TextInput:
                    id:pni
                    text_hint:"student\'s national identification card"
                    size_hint_x:.65
                    font_size:12
                    color:(0,0,0, 1)
                    multiline:False
                    focus:True
                    on_text_validate:poa.focus=True
            BoxLayout:
                spacing:10
                padding: 10
                size:self.size
                pos:self.pos
                size_hint_y: .6
                Label:
                    text:"Postal Address"
                    size_hint_x:.35
                    color:(0,0,0, 1)
                TextInput:
                    id:poa
                    text_hint:"Postal Address"
                    size_hint_x:.65
                    font_size:12
                    color:(0,0,0, 1)
                    multiline:False
                    focus:True
                    on_text_validate:cod.focus=True
            BoxLayout:
                spacing:10
                padding: 10
                size:self.size
                pos:self.pos
                size_hint_y: .6
                Label:
                    text:"Postal Code"
                    size_hint_x:.35
                    color:(0,0,0, 1)
                TextInput:
                    id:pni
                    text_hint:"Postal code"
                    size_hint_x:.65
                    font_size:12
                    color:(0,0,0, 1)
                    multiline:False
                    focus:True
                    on_text_validate:em.focus=True
            BoxLayout:
                spacing:10
                padding: 10
                size:self.size
                pos:self.pos
                size_hint_y: .6
                Label:
                    text:"Email Address"
                    size_hint_x:.35
                    color:(0,0,0, 1)
                TextInput:
                    id:em
                    text_hint:"Email Address"
                    size_hint_x:.65
                    font_size:12
                    color:(0,0,0, 1)
                    multiline:False
                    focus:True
                    on_text_validate:rn.focus=True
            BoxLayout:
                spacing:10
                padding: 10
                size:self.size
                pos:self.pos
                size_hint_y: .6
                Label:
                    text:"Registration Number"
                    size_hint_x:.35
                    color:(0,0,0, 1)
                TextInput:
                    id:rn
                    text_hint:"Registration Number"
                    size_hint_x:.65
                    font_size:12
                    color:(0,0,0, 1)
                    multiline:False
                    focus:True
                    on_text_validate:co.focus=True
            BoxLayout:
                spacing:10
                padding: 10
                size:self.size
                pos:self.pos
                size_hint_y: .6
                Label:
                    text:'Course'
                    size_hint_x:.35
                    color:(0,0,0, 1)
                FlatButton:
                    id: btn
                    bold:False
                    font_size:14
                    text:"select"
                    on_release: dropdown.open(self)
                    size_hint_y: None
                    size_hint_x: .65
                    height: 30

                Widget:
                    on_parent: dropdown.dismiss()

                DropDown:

                    id: dropdown
                    on_select: btn.text = '{}'.format(args[1])
                    spacing:10
                    padding:10

                    Button:
                        text: 'BICT'
                        bold:False
                        font_size:14
                        size_hint_y:None
                        height: '30'
                        on_release: dropdown.select('BICT')

                    Button:
                        text: 'Computer Science'
                        bold:False
                        font_size:14
                        size_hint_y: None
                        height: '30'
                        on_release: dropdown.select('Computer Science')

                    Button:
                        text: 'Criminology'
                        bold:False
                        font_size:14
                        size_hint_y: None
                        height: '30'
                        on_release: dropdown.select('Criminology')
                    Button:
                        text: 'Criminology'
                        bold:False
                        font_size:14
                        size_hint_y: None
                        height: '30'
                        on_release: dropdown.select('Criminology')
                    Button:
                        text: 'Criminology'
                        bold:False
                        font_size:14
                        size_hint_y: None
                        height: '30'
                        on_release: dropdown.select('Criminology')
                    Button:
                        text: 'Criminology'
                        bold:False
                        font_size:14
                        size_hint_y: None
                        height: '30'
                        on_release: dropdown.select('Criminology')

            BoxLayout:
                spacing:10
                padding: 10
                size:self.size
                pos:self.pos
                size_hint_y: .6
                CustLabel:
                    text:"Sex"
                    size_hint_x:.35
                    color:(0,0,0, 1)
                CustLabel:
                    text: "Male"
                    size_hint_x: .20
                    font_size:12
                CheckBox:
                    color:(0, 0, 0, 1)
                    on_active: root.checkbox_click(self, self.active)
                    size_hint_x: .10

                CustLabel:
                    text: "Female"
                    size_hint_x: .20
                    font_size:12
                CheckBox:
                    color:(0, 0, 0, 1)
                    on_active: root.checkbox_click(self, self.active)
                    size_hint_x: .10

                CustLabel:
                    text: "Other"
                    size_hint_x: .20
                    font_size:12
                    bold:False
                CheckBox:
                    color:(0, 0, 0, 1)
                    on_active: root.checkbox_click(self, self.active)
                    size_hint_x: .10
    BoxLayout:
        orientation: 'vertical'
        size_hint_y:.2
        #height:20
        FlatButton:
            hint_size_x:.2
            text:"Register"
            center:(.5,.5)
            on_release:root.faceCheck()
