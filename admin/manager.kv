WindowManager:
    managerScreen:
    other_details:

<FlatButton@ButtonBehavior+Label>
    font_size:16

<RoundedButton@Button>
    background_color:( 0, 0, 0, 0)
    background_normal:""
    canvas.before:
        Color:
            rgba:(0.404, 0.227, 0.718, 1)
        RoundedRectangle:
            size:self.size
            pos:self.pos
            radius:[5]

<CustLabel@Label>:
    color: 0, 0, 0, 1
    bold:False

<managerScreen>
    name:"sr"
    id:sr
    orientation:'vertical'
    spacing: 10
    #space_x: self.size[0]/4
    canvas.before:
        Color:
            rgba:(0.85, 0.85, 0.85, 1)
        Rectangle:
            size:self.size
            pos:self.pos

    BoxLayout:
        id:nav
        size_hint_y:None
        height:50
        radius:[0,0,0,40]
        pos_hint:{'center_x':0.5, 'top':1}
        canvas.before:
            Color:
                rgba:((0.404, 0.227, 0.718, 1))
            Rectangle:
                size:self.size
                pos:self.pos
        Label:
            text:"Student Registration"
            size_hint_x:.9
            font_size:28
            color:(1,1,1, 1)
            bold:True
        FlatButton:
            text:"X"
            size_hint_x:.1
            bold:True

    BoxLayout:
        id:spinfo
        spacing:20
        padding:20
        BoxLayout:
            orientation:'vertical'
            spacing:10
            padding:20
            radius:[40]
            canvas.before:
                Color:
                    rgba:(0.95, 0.95, 0.95, 1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
            Label:
                text:"Student\'s Personal Information"
                color:(0 , 0 , 0, 1)
                font_size:26
                size_hint_y:None
                height:50

            Label:
                id:right_info
                text:""
                color:( 1, 0, 0, 1)
                font_size:14
            TextInput:
                id:nm
                hint_text:"Student\'s Name"
                multiline: False
                size_hint_y:None
                height:30
                focus:True
                write_tab:False
                on_text_validate:
                    root.validateName()
                    em.focus=True
            TextInput:
                id:em
                hint_text:"Student\'s Email"
                multiline: False
                size_hint_y:None
                height:30
                write_tab:False
                on_text_validate:
                    root.validateEmail()
                    yob.focus=True

            TextInput:
                id:yob
                hint_text:"Student\'s Year of birth"
                multiline: False
                size_hint_y:None
                input_filter:"int"
                height:30
                write_tab:False
                on_text_validate:
                    root.validateYob()
                    idn.focus=True
            TextInput:
                id:idn
                hint_text:"Student\'s Id.No"
                multiline: False
                size_hint_y:None
                input_filter:"int"
                height:30
                write_tab:False
                on_text_validate:
                    root.validateId()
                    ph.focus=True
            TextInput:
                id:ph
                hint_text:"Student\'s Phone Number"
                multiline: False
                size_hint_y:None
                height:30
                write_tab:False
                input_filter:"int"
                on_text_validate:
                    root.validatePhone()
                    cor.focus=True

            BoxLayout:
                spacing:10
                padding: 10
                size:self.size
                pos:self.pos
                size_hint_y: None
                height:30
                CustLabel:
                    text: "Male"
                    size_hint_x: .20
                    font_size:12
                CheckBox:
                    id:male
                    group:'check'
                    color:(0, 0, 0, 1)
                    on_active: root.set_gender("Male")
                    size_hint_x: .10

                CustLabel:
                    text: "Female"
                    size_hint_x: .20
                    font_size:12
                CheckBox:
                    #id:Female
                    group:'check'
                    color:(0, 0, 0, 1)
                    on_active: root.set_gender("Female")
                    size_hint_x: .10

                CustLabel:
                    text: "Other"
                    size_hint_x: .20
                    font_size:12
                CheckBox:
                    #id:other
                    group:'check'
                    color:(0, 0, 0, 1)
                    on_active: root.set_gender("Other")
                    size_hint_x: .10

            Label:
                id: sp
                size_hint_y:None
                height:5
        BoxLayout:
            orientation:'vertical'
            spacing:20
            padding:20
            radius:[40]
            canvas.before:
                Color:
                    rgba:(0.95, 0.95, 0.95, 1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos

            Label:
                text:"Student\'s Institutional Information"
                color:(0 , 0 , 0, 1)
                font_size:26
                size_hint_y:None
                height:50

            Label:
                id:left_info
                text: ''
                color:( 1, 0, 0, 1)
                font_size:14
            TextInput:
                id:cor
                hint_text:"Course in short form(e.g BICT or bict)"
                multiline: False
                size_hint_y:None
                height:30
                write_tab:False
                on_text_validate:
                    root.validateCourse()
                    reg.focus=True
            TextInput:
                id:reg
                hint_text:"Registration Number"
                multiline: False
                size_hint_y:None
                height:30
                focus:True
                write_tab:False
                on_text_validate:
                    root.validateReg()
            Label:
                text: ''
                color:( 1, 0, 0, 1)
                size_hint_y:10

            BoxLayout:
                spacing:20
                RoundedButton:
                    id:camera
                    text:"camera"
                    size_hint_y:None
                    size_hint_x:.8
                    height:30
                    disabled:True
                    bold:True
                    font_size: 16
                    on_press: root.cameraOn()#app.root.current = "moreinfo"
                RoundedButton:
                    id:form
                    text:"Clear form"
                    size_hint_y:None
                    size_hint_x:.8
                    height:30
                    #disabled:True
                    bold:True
                    font_size: 16
                    on_press: root.Clear_Form()

            RoundedButton:
                text:"Next"
                size_hint_y:None
                height:40
                #background_normal:""
                #background_color:(51/255, 82/255, 255, 1)
                bold:True
                font_size: 22
                on_press: root.validation()
                    #app.root.current = "moreinfo"



    BoxLayout:
        id:end
        size_hint_y: None
        height: 50